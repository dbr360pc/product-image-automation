<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Daily Product Image Scan Cron Job -->
        <record id="ir_cron_product_image_daily_scan" model="ir.cron">
            <field name="name">Product Image Daily Scan</field>
            <field name="model_id" ref="model_product_image_fetcher"/>
            <field name="state">code</field>
            <field name="code">model.run_daily_scan()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall">True</field>
            <field name="active">True</field>
            <field name="nextcall" eval="(datetime.now() + timedelta(days=1)).replace(hour=2, minute=0, second=0)"/>
        </record>

        <!-- Weekly Log Cleanup Cron Job -->
        <record id="ir_cron_product_image_log_cleanup" model="ir.cron">
            <field name="name">Product Image Log Cleanup</field>
            <field name="model_id" ref="model_product_image_log"/>
            <field name="state">code</field>
            <field name="code">
config = env['product.image.config'].get_active_config()
if config:
    model.cleanup_old_logs(config.log_retention_days)
            </field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field name="doall">True</field>
            <field name="active">True</field>
            <field name="nextcall" eval="(datetime.now() + timedelta(days=7)).replace(hour=3, minute=0, second=0)"/>
        </record>

        <!-- Default Configuration Data -->
        <record id="default_product_image_config" model="product.image.config">
            <field name="name">Default Configuration</field>
            <field name="active">True</field>
            <field name="use_amazon_api">False</field>
            <field name="use_google_images">True</field>
            <field name="use_bing_images">False</field>
            <field name="min_image_width">200</field>
            <field name="min_image_height">200</field>
            <field name="max_image_size_mb">5.0</field>
            <field name="preferred_formats">jpg_png</field>
            <field name="requests_per_minute">60</field>
            <field name="daily_requests_limit">1000</field>
            <field name="batch_size">50</field>
            <field name="enable_deduplication">True</field>
            <field name="skip_products_with_images">True</field>
            <field name="force_update_mode">False</field>
            <field name="test_mode">True</field>
            <field name="test_product_limit">10</field>
            <field name="enable_detailed_logging">True</field>
            <field name="log_retention_days">30</field>
            <field name="cron_active">False</field>
            <field name="cron_hour">2</field>
            <field name="cron_minute">0</field>
        </record>
    </data>
</odoo>