<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Image Configuration Form View -->
    <record id="view_product_image_config_form" model="ir.ui.view">
        <field name="name">product.image.config.form</field>
        <field name="model">product.image.config</field>
        <field name="arch" type="xml">
            <form string="Product Image Configuration">
                <header>
                    <button name="action_test_configuration" string="Test Configuration" type="object" 
                           class="btn-primary" icon="fa-play"/>
                    <button name="action_run_backfill" string="Run Backfill Job" type="object" 
                           class="btn-secondary" icon="fa-refresh"
                           confirm="This will process all products. Continue?"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Configuration Name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="active"/>
                    </group>
                    
                    <notebook>
                        <!-- Image Sources Tab -->
                        <page string="Image Sources" name="sources">
                            <group string="Amazon Product Advertising API">
                                <field name="use_amazon_api"/>
                                <field name="amazon_access_key" password="True" 
                                       attrs="{'invisible': [('use_amazon_api', '=', False)]}"/>
                                <field name="amazon_secret_key" password="True"
                                       attrs="{'invisible': [('use_amazon_api', '=', False)]}"/>
                                <field name="amazon_partner_tag"
                                       attrs="{'invisible': [('use_amazon_api', '=', False)]}"/>
                                <field name="amazon_marketplace"
                                       attrs="{'invisible': [('use_amazon_api', '=', False)]}"/>
                            </group>
                            
                            <group string="Google Images Fallback">
                                <field name="use_google_images"/>
                                <field name="google_api_key" password="True"
                                       attrs="{'invisible': [('use_google_images', '=', False)]}"/>
                                <field name="google_search_engine_id"
                                       attrs="{'invisible': [('use_google_images', '=', False)]}"/>
                            </group>
                            
                            <group string="Bing Images Fallback">
                                <field name="use_bing_images"/>
                                <field name="bing_api_key" password="True"
                                       attrs="{'invisible': [('use_bing_images', '=', False)]}"/>
                            </group>
                        </page>
                        
                        <!-- Quality Settings Tab -->
                        <page string="Quality Settings" name="quality">
                            <group string="Image Requirements">
                                <field name="min_image_width"/>
                                <field name="min_image_height"/>
                                <field name="max_image_size_mb"/>
                                <field name="preferred_formats"/>
                            </group>
                            
                            <group string="Processing Options">
                                <field name="enable_deduplication"/>
                                <field name="skip_products_with_images"/>
                                <field name="force_update_mode"/>
                            </group>
                        </page>
                        
                        <!-- Rate Limiting Tab -->
                        <page string="Rate Limiting" name="limits">
                            <group string="API Rate Limits">
                                <field name="requests_per_minute"/>
                                <field name="daily_requests_limit"/>
                                <field name="batch_size"/>
                            </group>
                        </page>
                        
                        <!-- Test Mode Tab -->
                        <page string="Test Mode" name="test">
                            <group string="Testing Configuration">
                                <field name="test_mode"/>
                                <field name="test_product_limit"
                                       attrs="{'invisible': [('test_mode', '=', False)]}"/>
                            </group>
                        </page>
                        
                        <!-- Logging Tab -->
                        <page string="Logging" name="logging">
                            <group string="Log Configuration">
                                <field name="enable_detailed_logging"/>
                                <field name="log_retention_days"/>
                            </group>
                        </page>
                        
                        <!-- Cron Settings Tab -->
                        <page string="Scheduling" name="cron">
                            <group string="Daily Cron Job">
                                <field name="cron_active"/>
                                <field name="cron_hour"
                                       attrs="{'invisible': [('cron_active', '=', False)]}"/>
                                <field name="cron_minute"
                                       attrs="{'invisible': [('cron_active', '=', False)]}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Product Image Configuration Tree View -->
    <record id="view_product_image_config_tree" model="ir.ui.view">
        <field name="name">product.image.config.tree</field>
        <field name="model">product.image.config</field>
        <field name="arch" type="xml">
            <tree string="Image Configurations">
                <field name="name"/>
                <field name="active"/>
                <field name="use_amazon_api"/>
                <field name="use_google_images"/>
                <field name="use_bing_images"/>
                <field name="cron_active"/>
                <field name="test_mode"/>
            </tree>
        </field>
    </record>

    <!-- Product Image Configuration Action -->
    <record id="action_product_image_config" model="ir.actions.act_window">
        <field name="name">Image Configuration</field>
        <field name="res_model">product.image.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first image automation configuration!
            </p>
            <p>
                Configure how product images should be automatically fetched and managed.
            </p>
        </field>
    </record>
</odoo>